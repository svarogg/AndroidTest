<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="90dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Contact Name"
            android:id="@+id/contactNameView"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/contactImageView"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:src="@mipmap/question_mark"
            />
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/contactNetworkImageView"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:src="@mipmap/question_mark"
            android:visibility="gone"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/phoneNumberContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_gravity="left"
            android:layout_marginRight="110dp" >
            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Phone Number:" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[phone number]"
                android:layout_gravity="right"
                android:id="@+id/phoneNumberView"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/callButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/phone_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/smsButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/sms_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="53dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/emailAddressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_gravity="left"
            android:layout_marginRight="60dp">
            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Email Address: "/>
            <TextView
                android:id="@+id/emailAddressView"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[email address]"
                android:layout_gravity="right" />
        </LinearLayout>
        <ImageView
            android:id="@+id/emailButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/email_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
</LinearLayout>